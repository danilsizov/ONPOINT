<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="danilgroup.onpoint.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:id="@+id/linearLayout">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="@mipmap/profle"
                android:layout_gravity="center"
                android:onClick="goToProfile" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal|top"
                android:background="#d68231" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:background="@mipmap/compose"
                android:layout_gravity="center"
                android:onClick="goToCompain" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:background="@mipmap/check"
                android:layout_gravity="center"
                android:onClick="goToQuest" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:background="@mipmap/gear"
                android:layout_gravity="center"
                android:onClick="goToOptions" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/myface"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/textView3"
            android:layout_gravity="right|bottom"
            android:background="#212121"
            android:textColor="#d68231"
            android:textSize="40dp"
            android:layout_marginRight="20dp" />
    </FrameLayout>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/mylvl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="11"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:textColor="#fefdfd" />
        </FrameLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="132dp"
            android:layout_height="77dp"
            android:layout_gravity="left|top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="XP"
                android:id="@+id/textView16" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="left|center_vertical"
                android:progress="32"
                android:progressTint="#d68231" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="112"
                android:id="@+id/textView17"
                android:layout_marginLeft="10dp"
                android:textColor="#d68231"
                android:layout_gravity="right|top" />
        </FrameLayout>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="132dp"
            android:layout_height="77dp"
            android:layout_gravity="right|top" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Coins"
                android:id="@+id/textView18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="336"
                android:id="@+id/textView19"
                android:layout_marginLeft="10dp"
                android:textColor="#d68231"
                android:layout_gravity="top|center_horizontal|right" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Market"
                android:id="@+id/button12"
                android:layout_gravity="center"
                android:background="#d68231"
                android:textColor="#ffffff" />

        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/button13"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#212121" />

    </FrameLayout>

</RelativeLayout>
